{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! âœ…</h1>

		This friendly message is coming from:
		<ul>
        {% if app.user is defined %}

			<li>User Full Name is : {{ app.user.firstName ~" " ~ app.user.lastName  }}</li>
			<li>User Email is :{{ app.user.email}}</li>
			<li>User Password is :{{ app.user.password}}</li>
			<li>User role is :{{ app.user.roles[0]}}</li>

            {% endif %}

		</ul>
	</div>
{% endblock %}
