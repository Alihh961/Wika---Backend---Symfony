{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="rwd-table w-50 position-relative">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|StringRoles }}</td>
            </tr>

            <tr>
                <th>First Name</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ user.gender }}</td>
            </tr>
            <tr>
                <th>Date Of Birth</th>
                <td>{{ user.dateOfBirth ? user.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="mx-auto w-fit my-3">

    <a href="{{ path('app_user_index') }}" class="custom-btn-back-to-list">Back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="custom-btn-edit">Edit</a>
    <div class="mx-auto my-3 w-fit">
        {{ include('user/_delete_form.html.twig') }}
    </div>
    </div>

{% endblock %}
