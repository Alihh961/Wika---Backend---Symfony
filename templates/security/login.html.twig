{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

{% block body %}
	<div class="row">
		<form method="post" class="py-3 col-lg-6 col-md-8 col-sm-10 col-10 text-center login-form">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal m-auto">Sign-In Form</h1>
			<div class="w-50 mx-auto my-5 position-relative email-box">
				<input type="email" name="email" class="form-control login-input" required>
				<label for="inputEmail" class="my-3 position-absolute login-label">Email</label>
			</div>
			<div class="w-50 mx-auto my-5 position-relative password-box">
				<input type="password" name="password" class="form-control login-input" required>
				<label for="inputPassword" class="my-3 position-absolute login-label">Password</label>
			</div>
			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
						        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
						        See https://symfony.com/doc/current/security/remember_me.html
						
						        <div class="checkbox mb-3">
						            <label>
						                <input type="checkbox" name="_remember_me"> Remember me
						            </label>
						        </div>
						    #}

			<button class="btn btn-lg btn-primary" type="submit">
				Sign in
			</button>
		</form>
	</div>
{% endblock %}
