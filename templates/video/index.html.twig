{% extends 'base.html.twig' %}

{% block title %}Video index{% endblock %}

{% block body %}
    <div class="bg-image position-absolute top-0 start-0 opacity-50"></div>
    <h1 class="w-fit mx-auto my-3 position-relative">All Videos</h1>


    <table class="rwd-table position-relative">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.name }}</td>
                <td>
                    <a href="{{ path('app_video_show', {'id': video.id}) }}" class="btn btn-warning">Show</a>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <hr class="m-0">
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="3">
            {{ knp_pagination_render(videos) }}
            </td>
        </tr>
        </tbody>
    </table>

{% endblock %}
