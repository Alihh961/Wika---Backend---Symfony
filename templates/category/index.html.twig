{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="bg-image position-absolute top-0 start-0 opacity-50"></div>

    <h1 class="w-fit mx-auto my-3 position-relative">All Categories</h1>

    <table class="position-relative rwd-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td class="d-flex justify-content-center align-items-center gap-2">
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-warning">Show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="custom-btn-edit">Edit</a>
                    {{ include('category/_delete_form.html.twig') }}

                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <hr  class="my-0">
                </td>
            </tr >
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="3">
                {{ knp_pagination_render(categories) }}
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <a href="{{ path('app_category_new') }}" class="custom-btn-create mx-auto my-3 px-2 w-fit">Create new category</a>

            </td>
        </tr>
        </tbody>
    </table>

{% endblock %}
