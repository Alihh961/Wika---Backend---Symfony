{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="bg-image position-absolute top-0 start-0 opacity-50"></div>

    <h1 class="mx-auto my-3 w-fit position-relative">Category</h1>

    <table class="rwd-table position-relative">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ category.name }}</td>
        </tr>

        </tbody>
    </table>
    <div class="mx-auto w-fit my-3">

    <a href="{{ path('app_category_index') }}" class="custom-btn-back-to-list">Back to list</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="custom-btn-edit">Edit</a>
    </div>
    {{ include('category/_delete_form.html.twig') }}


{% endblock %}
