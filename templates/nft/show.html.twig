{% extends 'base.html.twig' %}

{% block title %}Nft{% endblock %}

{% block body %}
    <div class="bg-image position-absolute top-0 start-0 opacity-50"></div>

    <h1 class="text-center my-5">Nft</h1>
    <div class="w-50 m-auto">
        <table class="rwd-table my-5">
            <tr>
                <th>Id</th>
                <th>Image Name</th>
                <th>Price</th>
            </tr>
            <tr>
                <td>{{ nft.id }}</td>
                <td>{{ nft.image.name }}</td>
                <td>{{ nft.price }}</td>
            </tr>

        </table>
        <img class="w-50 m-auto d-block" src="{{ asset('uploads/' ~ nft.image.url) }}" alt="nft.image.name">

    </div>

<div class="mx-auto my-5 w-fit">
    <a href="{{ path('app_nft_index') }}" class="custom-btn-back-to-list">Back to list</a>

    <a href="{{ path('app_nft_edit', {'id': nft.id}) }}" class="custom-btn-edit">Edit</a>
</div>

    {{ include('nft/_delete_form.html.twig') }}
{% endblock %}
