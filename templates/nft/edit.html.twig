{% extends 'base.html.twig' %}

{% block title %}Edit Nft{% endblock %}

{% block body %}
    <div class="bg-image position-absolute top-0 start-0 opacity-50"></div>
    <h1 class="mx-auto w-fit my-4 position-relative">Edit Nft</h1>

    <section class=" custom-form w-50 m-auto position-relative ">

        {{ form_start(nftEditForm , { "attr" : { "class" : "d-flex flex-column w-100 gap-5 m-auto" }}) }}
        <div class="d-flex flex-column w-50 m-auto fw-bold">
            {{ form_label(nftEditForm.price ,"Nft Price :") }}
            {{ form_widget(nftEditForm.price , {'attr': {'class': 'edit-form-input'}}) }}

        </div>
        <div class="d-flex flex-column w-50 m-auto fw-bold ">
            {{ form_label(nftEditForm.description ,"Image Description :") }}
            {{ form_widget(nftEditForm.description, {'attr': {'class': 'edit-form-input'}}) }}
        </div>

        <div class="w-fit mx-auto my-2">
            <button type='submit' class='custom-btn-edit me-2'>Update</button>
            <a href='{{ path('app_nft_index') }}' class='custom-btn-back-to-list'>Back to list</a>
        </div>


        {{ form_end(nftEditForm) }}


        {{ include('nft/_delete_form.html.twig') }}


    </section>

{% endblock %}
