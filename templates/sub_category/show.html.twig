{% extends 'base.html.twig' %}

{% block title %}SubCategory{% endblock %}

{% block body %}
    <div class="bg-image position-absolute top-0 start-0 opacity-50"></div>

    <h1 class="w-fit mx-auto position-relative my-3">SubCategory</h1>

    <table class="rwd-table position-relative">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ sub_category.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ sub_category.name }}</td>
        </tr>
        </tbody>
    </table>

    <div class="m-auto w-fit my-3">
        <a href="{{ path('app_sub_category_index') }}" class="custom-btn-back-to-list">Back to list</a>

        <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="custom-btn-edit">Edit</a>

    </div>

    {{ include('sub_category/_delete_form.html.twig') }}
{% endblock %}
