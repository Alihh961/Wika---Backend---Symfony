{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% block body %}
    <div class="bg-image position-absolute top-0 start-0 opacity-50"></div>

    <h1 class="w-fit mx-auto position-relative my-3">All SubCategories</h1>

    <table class="rwd-table position-relative">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ sub_category.id }}</td>
                <td>{{ sub_category.name }}</td>
                <td class="d-flex justify-content-center align-items-center gap-2">
                    <a href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}" class="btn btn-warning">Show</a>
                    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="custom-btn-edit">Edit</a>
                    {{ include ("sub_category/_delete_form.html.twig") }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sub_category_new') }}">Create new</a>
{% endblock %}
