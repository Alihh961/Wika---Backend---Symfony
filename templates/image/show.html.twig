{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <div class="bg-image position-absolute top-0 start-0 opacity-50"></div>
    <h1 class="w-fit mx-auto my-5 position-relative">Image</h1>


    <table class="rwd-table position-relative">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ image.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ image.description }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ image.url }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ image.size }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ image.format }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>


        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_image_index') }}" class="custom-btn-back-to-list mx-auto my-3 d-block">Back to list</a>



{% endblock %}
